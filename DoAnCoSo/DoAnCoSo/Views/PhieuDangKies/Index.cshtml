@model IEnumerable<DoAnCoSo.Models.tbPhieuDangKy>

<style>
    .registration-table {
        margin: 20px;
    }

    h1 {
        font-size: 24px;
        margin-bottom: 20px;
    }

    .table {
        width: 100%;
        border-collapse: collapse;
        border: 1px solid #ccc;
    }

        .table th,
        .table td {
            padding: 10px;
            text-align: left;
        }

        .table th {
            background-color: #f2f2f2;
            font-weight: bold;
        }

        .table tr:nth-child(even) {
            background-color: #f9f9f9;
        }

    .details-link {
        color: #007bff;
        text-decoration: none;
    }

        .details-link:hover {
            text-decoration: underline;
        }
</style>
<div class="registration-table">
    <h1>Phiếu đăng ký của bạn</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Ngày Đăng Ký</th>
                <th>Cuộc Thi</th>
                <th>Người Dùng</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.NgayDangKy)</td>
                    <td>@Html.DisplayFor(modelItem => item.CuocThi.TenCuocThi)</td>
                    <td>@Html.DisplayFor(modelItem => item.User.HoTen)</td>
                    <td>
                        <a asp-controller="CuocThis" asp-action="Details" asp-route-Id="@item.CuocThi.Id">Xem cuộc thi</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

