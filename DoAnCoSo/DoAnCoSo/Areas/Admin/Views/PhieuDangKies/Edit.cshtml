@model DoAnCoSo.Models.tbPhieuDangKy
@using DoAnCoSo.Models

@{
    ApplicationDbContext context = new ApplicationDbContext();
    string LayTenLoaiTruong(int? loaiTruongId)
    {
        var tenLoaiTruong = context.tbLoaiTruong.FirstOrDefault(p => p.Id == loaiTruongId);
        if (tenLoaiTruong == null)
            return "";
        return tenLoaiTruong.TenLoaiTruong;
    }
    string LayTenTruong(int? TruongId)
    {
        var tenTruong = context.tbTruong.FirstOrDefault(p => p.Id == TruongId);
        if (tenTruong == null)
            return "";
        return tenTruong.TenTruong;
    }
}
<style>
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f2f2f2;
    }

    .container-deatils {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
        background-color: #ffffff;
        border-radius: 5px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    h1 {
        color: #003399;
        font-size: 24px;
        margin-bottom: 20px;
        text-align: center;
    }

    h2 {
        color: #003399;
        font-size: 20px;
        margin-bottom: 10px;
    }

    p {
        color: #666666;
        line-height: 1.5;
    }

    .section {
        margin-bottom: 30px;
        padding-bottom: 20px;
        border-bottom: 1px solid #eeeeee;
    }

    .section-title {
        font-size: 18px;
        margin-bottom: 10px;
    }

    .section-content {
        margin-left: 20px;
    }

    button {
        background-color: #0056b3;
        color: #fff;
        padding: 0.5em 1em;
        text-decoration: none;
        border-radius: 5px;
        margin-right: 5px; /* Giảm khoảng cách giữa các button */
        margin-left: 0;
        cursor: pointer;
        border: none;
        transition: background-color 0.3s ease;
    }

        button:hover {
            background-color: #0056b3;
        }
    a.btn-dangky {
        margin: 0;
        padding: 0;
        display: inline-block;
        text-decoration: none;
        color: #fff;
    }

    input[type="submit"] {
        border-radius: 5px;
        border: 1px solid #ccc;
        padding: 10px;
        width: 100%;
        margin-bottom: 10px;
        background-color: #007bff;
        color: #fff;
        font-weight: bold;
    }

        input[type="submit"]:hover {
            background-color: #0056b3;
        }
</style>
<div class="container-deatils">
    <h1>Thông tin chi tiết phiếu đăng ký</h1>
    <div class="container-deatils-content">
        <div class="section">
            <div class="section-title">
                <button>
                    <a class="btn-dangky" asp-area="Admin" asp-controller="PhieuDangKies" asp-action="Details" asp-route-id="@Model.Id">Trở về</a>
                </button>
                <h2>Thông tin cá nhân</h2>
            </div>
            <form asp-action="Edit">
                <div class="section-content">
                    <input asp-for="UserId" class="form-control" value="@Model.UserId" hidden />
                    <input asp-for="CuocThiId" class="form-control" value="@Model.CuocThiId" hidden />
                    <input asp-for="NgayDangKy" class="form-control" value="@Model.NgayDangKy" hidden />

                    <p><strong>Họ và tên: </strong> @Html.DisplayFor(model => model.User.HoTen)</p>
                    <p><strong>Email: </strong><input asp-for="Email" class="form-control"/></p>
                    <p><strong>Số điện thoại: </strong> <input asp-for="SoDienThoai" class="form-control" /></p>
                    <p><strong>Địa chỉ: </strong> @Html.DisplayFor(model => model.User.DiaChi)</p>
                    <p>
                        <strong>Trường: </strong>
                        <select asp-for="TruongId" class="form-control">
                            @{
                                ApplicationDbContext _context = new ApplicationDbContext();
                                string GetNameSchool(int truongId)
                                {
                                    return _context.tbTruong.FirstOrDefault(p => p.Id == truongId).TenTruong.ToString();
                                }
                                int LayMaLoaiTruong(int? truongId)
                                {
                                    var truong =  _context.tbTruong.FirstOrDefault(p => p.Id == truongId);
                                    return truong.LoaiTruongId;
                                }
                                int loaiTruongId = LayMaLoaiTruong(Model.TruongId);
                            }
                            @foreach (var item in _context.tbTruong.Where(truong => truong.TrangThai != 0 && truong.LoaiTruongId == loaiTruongId).ToList())
                            {
                                <option value="@item.Id">@GetNameSchool(@item.Id)</option>
                            }
                        </select>
                    </p>
                    <p><strong>Ngày đăng ký: </strong> @Html.DisplayFor(model => model.NgayDangKy)</p>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>

        <div class="section">
            <h2 class="section-title">Thông tin cuộc thi</h2>
            <div class="section-content">
                <p><strong>Mã cuộc thi:</strong> @Html.DisplayFor(model => model.CuocThi.Id)</p>
                <p><strong>Tên cuộc thi:</strong> @Html.DisplayFor(model => model.CuocThi.TenCuocThi)</p>
                <p><strong>Ngày thi:</strong> @Html.DisplayFor(model => model.CuocThi.NgayThi)</p>
                <p><strong>Cấp học:</strong> @LayTenLoaiTruong(Model.CuocThi.LoaiTruongId)</p>

            </div>
        </div>
    </div>
</div>