@model IEnumerable<DoAnCoSo.Models.tbPhieuDangKy>
@using DoAnCoSo.Models

@{
    ApplicationDbContext context = new ApplicationDbContext();
}

<style>
    .school-type-list {
        font-family: Arial, sans-serif;
        background-color: #f2f2f2;
        padding: 20px;
        border-radius: 5px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
    }

        .school-type-list h1 {
            color: black;
            margin-bottom: 20px;
        }

        .school-type-list table {
            width: 100%;
            margin-top: 20px;
            background-color: #fff;
            border-collapse: collapse;
        }

            .school-type-list table th {
                background-color: #007bff;
                color: #fff;
                padding: 10px;
                text-align: left;
            }

            .school-type-list table td {
                padding: 10px;
                border-bottom: 1px solid #ddd;
            }

                .school-type-list table td a.edit-link {
                    background-color: #007bff;
                    color: #fff;
                    padding: 5px 10px;
                    text-decoration: none;
                    border-radius: 5px;
                }

                    .school-type-list table td a.edit-link:hover {
                        background-color: #0056b3;
                    }

    .table {
        text-align: center;
    }

        button {
            background-color: #007bff;
            color: #fff;
            padding: 10px 20px;
            text-decoration: none;
            border-radius: 5px;
            margin-right: 10px;
            cursor: pointer;
            border: none;
            transition: background-color 0.3s ease;
        }

            button:hover {
                background-color: #0056b3;
            }

    .btn-dangky {
        text-decoration: none;
        color: #fff;
    }
    /* CSS cho form nhập điểm */
    #overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5);
        z-index: 9999;
    }

    #scoreFormContainer {
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        background-color: #fff;
        padding: 20px;
        z-index: 10000;
        background-color: #f1f1f1;
        width: 700px;
        border-radius: 5px;
    }

        #scoreFormContainer h2 {
            color: #007bff;
            text-align: center;
        }

        #scoreFormContainer label {
            display: block;
            margin-top: 10px;
        }

        #scoreFormContainer input[type="number"] {
            width: 100%;
            padding: 5px;
            border-radius: 3px;
            border: 1px solid #ccc;
        }

        #scoreFormContainer button {
            margin-top: 10px;
            width: 100%;
            padding: 10px;
            background-color: #007bff;
            color: #fff;
            border: none;
            border-radius: 3px;
            cursor: pointer;
        }
        .head{
            display: inline-block;
        }
        .Phieuketqua {
  display: flex;
  justify-content: space-between;
  margin: 20px;
}

.ThongTinThiSinh,
.KetQua {
  flex-basis: 48%;
  background-color: #f5f5f5;
  padding: 20px;
  margin: 10px;
  border-radius: 5px;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
}

.ThongTinThiSinh h2,
.KetQua h2 {
  margin-top: 0;
}

.ThongTinThiSinh input,
.KetQua input {
  width: 100%;
  margin-bottom: 10px;
}

.btn {
  margin-right: 10px;
}

#confirmInfoButton,
#closeFormNhapButton {
  margin-top: 10px;
}
</style>

@* Dùng để hiện form nhập và sửa điểm *@
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<div class="school-type-list">
    <div style="display: flex; align-items: center; justify-content: space-between;">
        <h1><i class="fas fa-file-alt"></i> PHIẾU ĐĂNG KÝ CỦA CUỘC THI</h1>
        <button>
            <a class="btn-dangky" asp-area="Admin" asp-controller="PhieuKetQuas" asp-action="Index" asp-route-cuocThiId="@ViewBag.CuocThiId">
                Kết quả chi tiết
            </a>
        </button>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Id
                </th>
                <th>
                    Cuộc thi
                </th>
                <th>
                    Ngày đăng ký
                </th>
                <th>
                    Người đăng ký
                </th>
                <th>
                    Điểm
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CuocThi.TenCuocThi)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NgayDangKy)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.User.HoTen)
                    </td>
                    <td>
                        @{
                            var pkq = context.tbPhieuKetQua.FirstOrDefault(p => p.PhieuDangKyId == item.Id);
                        }
                        @if (pkq != null)
                            @pkq.Diem.ToString()
                    </td>
                    <td>
                        <button>
                            <a class="btn-dangky" asp-area="Admin" asp-controller="PhieuDangKies" asp-action="Details" asp-route-id="@item.Id">
                                Chi tiết
                            </a>
                        </button>
                        @if(pkq == null )
                        {
                            <button class="openFormNhapButton" data-phieu-dang-ky-id="@item.Id">Nhập điểm</button>
                        }
                        else
                        {
                            <button class="openFormSuaButton" data-phieu-dang-ky-id="@item.Id">Sửa điểm</button>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script>
    $(document).ready(function () {
        $('.openFormNhapButton').click(function () {
            var phieuDangKyId = $(this).data('phieu-dang-ky-id');

            // Tạo overlay
            var overlay = $('<div id="overlay"></div>');
            overlay.css({
                'position': 'fixed',
                'top': '0',
                'left': '0',
                'width': '100%',
                'height': '100%',
                'background-color': 'rgba(0, 0, 0, 0.5)',
                'z-index': '9999'
            });

            // Tạo form nhập điểm
            var form = $('<div id="scoreFormContainer"></div>');
            form.html(`
                <div class="Phieuketqua">
                    <div class="ThongTinThiSinh">
                        <h2>Xác nhận thông tin</h2>
                        @* Nơi để form nhập sdt để xác nhận thông tin*@
                        <label>Số điện thoại:</label>
                        <input type="text" id="phoneNumberInput" class="form-control" placeholder="Nhập số điện thoại" required>
                        <button type="button" class="btn btn-primary" id="confirmInfoButton">Xác nhận</button>
                        @* thông tin user *@
                        <h4>Thông tin thí sinh</h4>
                        <label>Họ và tên:</label>
                        <input id="userIdtext" readonly>
                        <label>SDT:</label>
                        <input id="sdttext" readonly>
                        <label >Email:</label>
                        <input id="emailtext" readonly>
                        <label >Trường:</label>
                        <input id="truongNametext" readonly>
                        <br>
                    </div>
                    <div class="KetQua">
                        <h2>Nhập kết quả</h2>
                        <form id="scoreForm" action="/Admin/PhieuKetQuas/SaveDiem" method="post">
                            <label>Mã phiếu đăng ký:</label>
                            <input id="phieuDangKyIdInput" name="PhieuDangKyId" readonly>   
                            <label for="phutInput">Phút:</label>
                            <input type="number" id="phutInput" name="Phut">
                            <br>
                            <label for="giayInput">Giây:</label>
                            <input type="number" id="giayInput" name="Giay">
                            <br>
                            <label for="diemInput">Điểm:</label>
                            <input type="number" id="diemInput" name="Diem">
                            <br>
                            <button type="submit" class="btn btn-primary">Lưu</button>
                            <button type="button" class="btn btn-secondary" id="closeFormNhapButton">Đóng</button>
                        </form>
                    </div>
                </div>
            `);

            // Đưa overlay và form vào trang
            $('body').append(overlay);
            $('body').append(form);

            // Lắng nghe sự kiện submit form
            $('#scoreForm').submit(function (event) {
                event.preventDefault();

                // Lấy dữ liệu từ form
                var formData = $(this).serialize();

                // Gửi request AJAX để lưu dữ liệu điểm
                $.ajax({
                    url: '/Admin/PhieuKetQuas/SaveDiem',
                    type: 'POST',   
                    data: formData,
                    success: function (response) {
                        // Xử lý thành công
                        // Ẩn overlay và form
                        overlay.remove();
                        form.remove();
                        location.reload();
                    },
                    error: function (xhr, status, error) {
                        // Xử lý lỗi
                        var errorMessage = 'Đã xảy ra lỗi. Vui lòng thử lại sau.';

                        // Kiểm tra nếu có thông tin lỗi chi tiết từ phản hồi
                        if (xhr.responseText) {
                            errorMessage = xhr.responseText;
                        }

                        // Hiển thị thông báo lỗi cho người dùng
                        alert(errorMessage);
                    }
                });
            });

            //khi nhấn nút xác thực
            $('#confirmInfoButton').click(function () {
                var phoneNumber = $('#phoneNumberInput').val();
                var competitionId = @ViewBag.CuocThiId; // Thay đổi giá trị này nếu cần

                $.ajax({
                    url: '/Admin/PhieuDangKies/checkphone?phoneNumber=' + phoneNumber + '&competitionId=' + competitionId,
                    type: 'GET',
                    success: function (response) {
                        // Kiểm tra xem response có dữ liệu không
                        if (response.userName != null && response.soDienThoai != null && response.email != null && response.truongName != null && response.mapdk != null) {
                            var userName = response.userName;
                            var sdt = response.soDienThoai;
                            var email = response.email;
                            var truongName = response.truongName;
                            var mapdk = response.mapdk;


                            // Đặt giá trị điểm vào input
                            $('#userIdtext').val(userName);
                            $('#sdttext').val(sdt);
                            $('#emailtext').val(email);
                            $('#truongNametext').val(truongName);
                            $('#phieuDangKyIdInput').val(mapdk);
                        }
                    },
                    error: function (xhr, status, error) {
                        // Xử lý lỗi
                        var errorMessage = 'Không tồn tại số điện thoại của thí sinh trong cuộc thi này!';

                        // chuyển thành rỗng
                        $('#userIdtext').val('');
                            $('#sdttext').val('');
                            $('#emailtext').val('');
                            $('#truongNametext').val('');
                            $('#phieuDangKyIdInput').val('');


                        // Hiển thị thông báo lỗi cho người dùng
                        alert(errorMessage);
                    }
                });
            });

            $('#closeFormNhapButton').click(function () {
                // Ẩn overlay và form
                overlay.remove();
                form.remove();
            });
        });
    });

    $(document).ready(function () {
        $('.openFormSuaButton').click(function () {
            var phieuDangKyId = $(this).data('phieu-dang-ky-id');

            // Tạo overlay
            var overlay = $('<div id="overlay"></div>');
            overlay.css({
                'position': 'fixed',
                'top': '0',
                'left': '0',
                'width': '100%',
                'height': '100%',
                'background-color': 'rgba(0, 0, 0, 0.5)',
                'z-index': '9999'
            });

            // Tạo form sửa điểm
            var form = $('<div id="scoreFormContainer"></div>');
            form.html(`
            <div class="Phieuketqua">
                    <div class="ThongTinThiSinh">
                        <h2>Xác nhận thông tin</h2>
                        @* Nơi để form nhập sdt để xác nhận thông tin*@
                        <label>Số điện thoại:</label>
                        <input type="text" id="phoneNumberInput" class="form-control" placeholder="Nhập số điện thoại" required>
                        <button type="button" class="btn btn-primary" id="confirmInfoButton">Xác nhận</button>
                        @* thông tin user *@
                        <h4>Thông tin thí sinh</h4>
                        <label>Họ và tên:</label>
                        <input id="userIdtext" readonly>
                        <label>SDT:</label>
                        <input id="sdttext" readonly>
                        <label >Email:</label>
                        <input id="emailtext" readonly>
                        <label >Trường:</label>
                        <input id="truongNametext" readonly>
                        <br>
                    </div>
                    <div class="KetQua">
                        <h2>Sửa kết quả</h2>
                        <form id="scoreForm" action="/Admin/PhieuKetQuas/UpdateDiem" method="post">
                            <label>Mã phiếu:</label>
                            <input id="phieuDangKyIdInput" name="PhieuDangKyId" readonly>
                            <label for="phutInput">Phút:</label>
                            <input type="number" id="phutInput" name="Phut">
                            <br>
                            <label for="giayInput">Giây:</label>
                            <input type="number" id="giayInput" name="Giay">
                            <br>
                            <label for="diemInput">Điểm:</label>
                            <input type="number" id="diemInput" name="Diem">
                            <br>
                            <button type="submit" class="btn btn-primary">Lưu</button>
                            <button type="button" class="btn btn-secondary" id="closeFormNhapButton">Đóng</button>
                        </form>
                    </div>
                </div>
            `);

                $.ajax({
                    url: '/Admin/PhieuKetQuas/LayDiem?phieuDangKyId=' + phieuDangKyId,
                    type: 'GET',
                    success: function (response) {
                        // Kiểm tra xem response có dữ liệu điểm không
                        if (response.diem != null && response.phut != null && response.giay != null) {
                            var diem = response.diem;
                            var phut = response.phut;
                            var giay = response.giay;

                            // Đặt giá trị điểm vào input trong form sửa điểm
                            $('#diemInput').val('');
                            $('#phutInput').val('');
                            $('#giayInput').val('');
                        }
                    },
                    error: function (xhr, status, error) {
                        // Xử lý lỗi
                        var errorMessage = 'Đã xảy ra lỗi. Vui lòng thử lại sau.';

                        // Kiểm tra nếu có thông tin lỗi chi tiết từ phản hồi
                        if (xhr.responseText) {
                            errorMessage = xhr.responseText;
                        }

                        // Hiển thị thông báo lỗi cho người dùng
                        alert(errorMessage);
                    }
                });
                // Đưa overlay và form vào trang
            $('body').append(overlay);
            $('body').append(form);
            
            // Lấy dữ liệu điểm cũ thông qua AJAX
            
            //khi nhấn nút xác thực
            $('#confirmInfoButton').click(function () {
                var phoneNumber = $('#phoneNumberInput').val();
                var competitionId = @ViewBag.CuocThiId; // Thay đổi giá trị này nếu cần

                $.ajax({
                    url: '/Admin/PhieuDangKies/checkphone?phoneNumber=' + phoneNumber + '&competitionId=' + competitionId,
                    type: 'GET',
                    success: function (response) {
                        // Kiểm tra xem response có dữ liệu không
                        if (response.userName != null && response.soDienThoai != null && response.email != null && response.truongName != null && response.mapdk != null) {
                            var userName = response.userName;
                            var sdt = response.soDienThoai;
                            var email = response.email;
                            var truongName = response.truongName;
                            var mapdk = response.mapdk;


                            // Đặt giá trị điểm vào input
                            $('#userIdtext').val(userName);
                            $('#sdttext').val(sdt);
                            $('#emailtext').val(email);
                            $('#truongNametext').val(truongName);
                            $('#phieuDangKyIdInput').val(mapdk);
                        }
                    },
                    error: function (xhr, status, error) {
                        // Xử lý lỗi
                        var errorMessage = 'Không tồn tại số điện thoại của thí sinh trong cuộc thi này!';

                        // chuyển thành rỗng
                        $('#userIdtext').val('');
                            $('#sdttext').val('');
                            $('#emailtext').val('');
                            $('#truongNametext').val('');
                            $('#phieuDangKyIdInput').val('');
                            $('#diemInput').val('');
                            $('#phutInput').val('');
                            $('#giayInput').val('');


                        // Hiển thị thông báo lỗi cho người dùng
                        alert(errorMessage);
                    }
                });


                //CẦN SỬA PHIẾU ĐĂNG KÝ LẠI
                $.ajax({
                    url: '/Admin/PhieuKetQuas/LayDiem?phieuDangKyId=' + phieuDangKyId,
                    type: 'GET',
                    success: function (response) {
                        // Kiểm tra xem response có dữ liệu điểm không
                        if (response.diem != null && response.phut != null && response.giay != null) {
                            var diem = response.diem;
                            var phut = response.phut;
                            var giay = response.giay;

                            // Đặt giá trị điểm vào input trong form sửa điểm
                            $('#diemInput').val(diem);
                            $('#phutInput').val(phut);
                            $('#giayInput').val(giay);
                        }
                    },
                    error: function (xhr, status, error) {
                        // Xử lý lỗi
                        var errorMessage = 'Đã xảy ra lỗi. Vui lòng thử lại sau.';

                        // Kiểm tra nếu có thông tin lỗi chi tiết từ phản hồi
                        if (xhr.responseText) {
                            errorMessage = xhr.responseText;
                        }

                        // Hiển thị thông báo lỗi cho người dùng
                        alert(errorMessage);
                    }
                });
            });


            // Lắng nghe sự kiện submit form
            $('#scoreForm').submit(function (event) {
                event.preventDefault();

                // Lấy dữ liệu từ form
                var formData = $(this).serialize();

                // Gửi request AJAX để cập nhật điểm
                $.ajax({
                    url: '/Admin/PhieuKetQuas/UpdateDiem',
                    type: 'POST',
                    data: formData,
                    success: function (response) {
                        // Xử lý thành công
                        // Ẩn overlay và form
                        overlay.remove();
                        form.remove();
                        location.reload();
                    },
                    error: function (xhr, status, error) {
                        // Xử lý lỗi nếu cần
                    }
                });
            });

            $('#closeFormNhapButton').click(function () {
                // Ẩn overlay và form
                overlay.remove();
                form.remove();
            });
        });
    });
</script>



