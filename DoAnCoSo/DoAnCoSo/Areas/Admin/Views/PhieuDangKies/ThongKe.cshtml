@model DoAnCoSo.Models.tbThongKe

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>


<style>
    .bordered {
        border: 1px solid #ddd; /* Border style, size, and color */
        padding: 10px; /* Padding between content and border */
        display: flex;
        flex-direction: column; /* Stack items vertically */
        justify-content: center; /* Center items vertically */
        align-items: center; /* Center items horizontally */
        width: 30%; /* Flexible width for each item */
        margin: 10px; /* Margin around items */
        box-sizing: border-box; /* Include padding and border in element's total width and height */
    }

    .bordered-row {
        display: flex;
        flex-wrap: wrap; /* Allow items to wrap to the next line if needed */
        justify-content: space-around; /* Distribute space between items */
    }

    .border-item {
        text-align: center; /* Center text and numbers */
    }

        .border-item .total-user {
            margin: 5px 0;
            font-family: 'Times New Roman';
            font-size: 25px;
        }

    img {
        height: 100px;
        width: 100px;
    }

    .new-member-notification {
        color: white;
        background-color: #e592e5;
        border-radius: 5px;
    }

    @@media (max-width: 768px) {
        .bordered {
            width: 45%; /* Adjust width for smaller screens */
        }
    }

    @@media (max-width: 480px) {
        .bordered {
            width: 100%; /* Full width for mobile devices */
        }
    }
</style>

<canvas id="userChart"></canvas>

<div class="bordered-row">
    <!-- Container cha -->
    <div class="bordered">
        <div class="border-item">
            <p onclick="showRegisteredUsers()" style="cursor: pointer;" class="total-user">Total User: @Model.SoLuongUser</p>
            <div id="registeredUsers"></div>
            @if (Model.SoLuongUserMoi > 0)
            {
                <p id="newMembersNotification" class="new-member-notification">New: @Model.SoLuongUserMoi</p>
            }
            <img src="~/images-Login/globe.png" />
        </div>
    </div>

    <div class="bordered">
        <div class="border-item">
            <p class="total-user">Total Competition: @Model.SoLuongCuocThi</p>
            <img src="~/images-Login/cuocthi.png" />
        </div>
    </div>

    <div class="bordered">
        <div class="border-item">
            <p class="total-user">Total Enroll: @Model.SoLuongUserDK</p>
            <img src="~/images-Login/ghidanh.png" />
        </div>
    </div>
</div>


<script>
    function showRegisteredUsers() {
        window.location.href = '@Url.Action("DanhSachUser", "PhieuDangKies")';
    }
</script>
   