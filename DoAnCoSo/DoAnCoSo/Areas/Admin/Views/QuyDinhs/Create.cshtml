@model DoAnCoSo.Models.tbQuyDinh

<style>
    /* Định dạng màu chủ đạo xanh dương */
    .add-quyDinh {
        font-family: Arial, sans-serif;
        background-color: #f2f2f2;
        padding: 20px;
        border-radius: 5px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
    }

        .add-quyDinh h4 {
            color: #black;
            margin-bottom: 20px;
        }

        .add-quyDinh label.control-label {
            color: #007bff;
            font-weight: bold;
        }

        .add-quyDinh input[type="file"] {
            border-radius: 5px;
            border: 1px solid #ccc;
            padding: 10px;
            width: 100%;
            margin-bottom: 10px;
            cursor: pointer;
        }

        .add-quyDinh input[type="text"],
        .add-quyDinh input[type="submit"] {
            border-radius: 5px;
            border: 1px solid #ccc;
            padding: 10px;
            width: 100%;
            margin-bottom: 10px;
        }

        .add-quyDinh input[type="submit"] {
            background-color: #007bff;
            color: #fff;
            font-weight: bold;
            cursor: pointer;
        }

            .add-quyDinh input[type="submit"]:hover {
                background-color: #0056b3;
            }

    .text-danger {
        color: #dc3545;
        margin-top: 5px;
    }

    .add-quyDinh .custom-editor{
        overflow: hidden; /* Ẩn phần nội dung tràn */
        resize: none;
    }

    .add-quyDinh .custom-editor:focus {
        outline: none;
    }
</style>

<div class="add-quyDinh">
    <h4>Thêm quy định</h4>
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="TenQuyDinh" class="control-label">Tên quy định</label>
                    <input asp-for="TenQuyDinh" class="form-control autosize"></input>
                </div>
                <div class="form-group">
                    <label asp-for="NoiDungQuyDinh" class="control-label">Nội dung quy định</label>
                    <textarea asp-for="NoiDungQuyDinh" id="NoiDungQuyDinh" name="NoiDungQuyDinh" class="form-control custom-editor"></textarea>
                </div>
                <div class="form-group">
                    <label asp-for="imageURL" class="control-label">Ảnh</label>
                    <input type="file" asp-for="imageURL" class="form-control" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Thêm" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
    <!-- Trong phần head của view hoặc layout -->
    <script>
        // Hàm hiển thị thông báo với thời gian tự đóng
        function showSuccessMessage() {
            Swal.fire({
                icon: 'success',
                title: '@TempData["SuccessMessage"]',
                showConfirmButton: false,
                timer: 1500,
                onClose: function () {
                    // Sau khi thông báo tự đóng, chuyển hướng đến trang Index
                    window.location.href = '@Url.Action("Index", "QuyDinhs")';
                }
            });
        }

        // Hàm hiển thị thông báo lỗi với thời gian tự đóng
        function showErrorMessage() {
            Swal.fire({
                icon: 'error',
                title: '@TempData["ErrorMessage"]',
                showConfirmButton: false,
                timer: 1500
            });
        }

        // Gọi hàm hiển thị thông báo khi SuccessMessage hoặc ErrorMessage có giá trị
        @if (TempData["SuccessMessage"] != null)
        {
            <text>
                showSuccessMessage();
            </text>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <text>
                showErrorMessage();
            </text>
        }
    </script>

    <script>
        CKEDITOR.replace("NoiDungQuyDinh"
        );
    </script>
}

