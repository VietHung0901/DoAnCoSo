@model IEnumerable<DoAnCoSo.Models.tbNoiDung>


<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NoiDungThi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TenNoiDung)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.imageUrl)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td onclick="redirectToDetails('@item.Id')" style="cursor: pointer;">
                @Html.DisplayFor(modelItem => item.NoiDungThi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenNoiDung)
            </td>
                <td>
                    <img class="noidung-img" src="@Html.DisplayFor(modelItem => item.imageUrl)" style="width: 200px; height: 150px;" />
                </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>


<script>
    function redirectToDetails(Id) {
        window.location.href = "/Admin/NoiDungs/Details/" + Id;
    }
</script>