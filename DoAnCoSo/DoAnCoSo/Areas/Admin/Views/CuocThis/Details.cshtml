@model DoAnCoSo.Models.tbCuocThi

<h1>Cuộc Thi</h1>
<style>
    .col-sm-2 {
        line-height: 150%;
        font-size: 12.0pt;
        font-family: Arial, sans-serif;
    }
</style>
<tr>
    <dl class="row">
        <dt class="col-sm-2">
            Ngày Thi/Giờ Thi:  @Html.DisplayFor(model => model.NgayThi)
        </dt>
        <dt class="col-sm-2">
            Số Lượng: @Html.DisplayFor(model => model.SoLuongThiSinh)
        </dt>
        <dt class="col-sm-2">
            Địa Điểm: @Html.DisplayFor(model => model.DiaDiem)
        </dt>
        <dt class="col-sm-2">
            Môn Thi: @Html.DisplayFor(model => model.MonThi.TenMonThi)
        </dt>
        <span class="col-sm-2">
            Nội dung quy định:
            <strong onclick="redirectToDetails('@Model.Id')" style="cursor: pointer; text-decoration: underline; color: #007bff;">Tại đây!</strong>
        </span>
        @* <span class="col-sm-2">
            Nội dung cuộc thi:
            <strong onclick="redirectToDetails('@Model.Id')" style="cursor: pointer; text-decoration: underline; color: #007bff;">Tại đây!</strong>
        </span> *@
    </dl>
</tr>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

<script>
    function redirectToDetails(Id) {
        window.location.href = "/Admin/QuyDinhs/Index/" + Id;
    }
</script>
