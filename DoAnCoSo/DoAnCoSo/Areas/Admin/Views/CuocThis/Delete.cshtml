@model DoAnCoSo.Models.tbCuocThi

<style>
    .delete-school-type {
        margin: 20px;
    }

    h3 {
        font-size: 24px;
        margin-bottom: 10px;
    }

    h4 {
        font-size: 18px;
        margin-bottom: 10px;
    }

    hr {
        margin-top: 10px;
        margin-bottom: 10px;
        border: 0;
        border-top: 1px solid #ccc;
    }

    .row {
        margin-right: -15px;
        margin-left: -15px;
    }

    .col-sm-2 {
        flex: 0 0 16.6667%;
        max-width: 16.6667%;
        padding-right: 15px;
        padding-left: 15px;
    }

    .col-sm-10 {
        flex: 0 0 83.3333%;
        max-width: 83.3333%;
        padding-right: 15px;
        padding-left: 15px;
    }

    .btn-danger {
        color: #fff;
        background-color: #dc3545;
        border-color: #dc3545;
        border-radius: 4px;
        padding: 0.375rem 0.75rem;
        font-size: 1rem;
        line-height: 1.5;
        text-align: center;
        vertical-align: middle;
        cursor: pointer;
    }

        .btn-danger:hover {
            background-color: #c82333;
            border-color: #bd2130;
        }

    .back-link {
        margin-left: 10px;
    }

        .back-link a {
            color: #007bff;
            text-decoration: none;
        }

            .back-link a:hover {
                text-decoration: underline;
            }
</style>
<div class="delete-school-type">
    <h3>Bạn có muốn xóa cuộc thi này?</h3>
    <div>
        <h4>Cuộc thi</h4>
        <hr />
        <dl class="row">
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.NgayThi)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.NgayThi)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.SoLuongThiSinh)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.SoLuongThiSinh)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.DiaDiem)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.DiaDiem)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.MonThi)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.MonThi.Id)
            </dd>
        </dl>
    
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Index">Back to List</a>
        </form>
    </div>
</div>
