@model DoAnCoSo.Models.tbLoaiTruong

<style>
    .delete-school-type {
        margin: 20px;
    }

    h3 {
        font-size: 24px;
        margin-bottom: 10px;
    }

    h4 {
        font-size: 18px;
        margin-bottom: 10px;
    }

    hr {
        margin-top: 10px;
        margin-bottom: 10px;
        border: 0;
        border-top: 1px solid #ccc;
    }

    .row {
        margin-right: -15px;
        margin-left: -15px;
    }

    .col-sm-2 {
        flex: 0 0 16.6667%;
        max-width: 16.6667%;
        padding-right: 15px;
        padding-left: 15px;
    }

    .col-sm-10 {
        flex: 0 0 83.3333%;
        max-width: 83.3333%;
        padding-right: 15px;
        padding-left: 15px;
    }

    .btn-danger {
        color: #fff;
        background-color: #dc3545;
        border-color: #dc3545;
        border-radius: 4px;
        padding: 0.375rem 0.75rem;
        font-size: 1rem;
        line-height: 1.5;
        text-align: center;
        vertical-align: middle;
        cursor: pointer;
    }

        .btn-danger:hover {
            background-color: #c82333;
            border-color: #bd2130;
        }

    .back-link {
        margin-left: 10px;
    }

        .back-link a {
            color: #007bff;
            text-decoration: none;
        }

            .back-link a:hover {
                text-decoration: underline;
            }
</style>
<div class="delete-school-type">
    <h3>Bạn có muốn xóa loại trường này?</h3>
    <div>
        <h4>Loại trường</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">Tên loại trường</dt>
            <dd class="col-sm-10">@Model.TenLoaiTruong</dd>
        </dl>

        <form asp-action="Delete" onsubmit="return confirmDelete()">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" />
        </form>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
    <!-- Trong phần head của view hoặc layout -->


    <script>
        // Hàm hiển thị thông báo với thời gian tự đóng
        function showSuccessMessage() {
            Swal.fire({
                icon: 'success',
                title: '@TempData["SuccessMessage"]',
                showConfirmButton: false,
                timer: 1500,
                onClose: function () {
                    // Sau khi thông báo tự đóng, chuyển hướng đến trang Index
                    window.location.href = '@Url.Action("Index", "LoaiTruongs")';
                }
            });
        }

        // Hàm hiển thị thông báo lỗi với thời gian tự đóng
        function showErrorMessage() {
            Swal.fire({
                icon: 'error',
                title: '@TempData["ErrorMessage"]',
                showConfirmButton: false,
                timer: 1500
            });
        }

        // Gọi hàm hiển thị thông báo khi SuccessMessage hoặc ErrorMessage có giá trị
        @if (TempData["SuccessMessage"] != null)
        {
            <text>
                showSuccessMessage();
            </text>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <text>
                showErrorMessage();
            </text>
        }
    </script>


}