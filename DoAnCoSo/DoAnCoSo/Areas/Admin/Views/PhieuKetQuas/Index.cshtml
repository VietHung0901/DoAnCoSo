@using DoAnCoSo.Models
@model IEnumerable<DoAnCoSo.Models.tbPhieuKetQua>

@{
    ApplicationDbContext context = new ApplicationDbContext();
    var top3Results = Model.Take(3).ToList();
    var remainingResults = Model.ToList();

    string layTen (string userId)
    {
        var user = context.Users.FirstOrDefault(p => p.Id == userId);
        if (user == null)
            return "";
        return @user.HoTen.ToString();
    }
    int top = 0;
}
<style>
    body{
        background-image: linear-gradient(to bottom, #2196F3, #4CAF50);
        background-repeat: no-repeat;
        background-attachment: fixed;
        background-size: cover;
    }
    .list-Result {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        margin-bottom: 20px;
    }

    .result-board {
        display: flex;
        justify-content: space-around;
        align-items: end;
        margin: 20px;
    }

    .result {
        text-align: center;
        padding: 20px;
        border-radius: 8px;
        width: 120px;
        margin: 10px;
        box-shadow: 0px 2px 6px rgba(0, 0, 0, 0.2);
    }

        .result h3 {
            font-size: 24px;
            font-weight: bold;
            margin-bottom: 10px;
        }

        .result p {
            font-size: 18px;
            margin-bottom: 5px;
        }

    .resultTop {
        display: flex;
        justify-content: center;
        align-items: center;
        width: 100%;
        text-align: center;
    }

    .result1 {
        background-color: #FFD700;
        height: 200px;
        width: 60px;
    }

    .result2 {
        background-color: #C0C0C0;
        height: 160px;
        width: 60px;
    }

    .result3 {
        background-color: #CD7F32;
        height: 120px;
        width: 60px;
    }

    .list {
        text-align: center;
        max-height: 400px; /* Điều chỉnh chiều cao tùy ý */
        overflow-y: scroll; /* Hiển thị thanh cuộn dọc */
    }

    table {
        border-collapse: collapse;
        width: 100%;
        margin-bottom: 20px;
    }

    th, td {
        padding: 8px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    .list table thead {
        position: sticky;
        top: 0;
        background-color: #f5f5f5; /* Màu nền tùy ý */
    }

    th {
        background-color: #f0f0f0;
        font-weight: bold;
    }

    .announcement {
            text-align: center;
            padding: 5px;
            background-color: rgba(255, 255, 255, 0.8); /* Màu nền trong suốt */
            border-radius: 8px;
            margin: 20px auto;
            max-width: 400px;
        }

            .announcement h2 {
                font-size: 24px;
                font-weight: bold;
            }

            .announcement p {
                font-size: 18px;
            }

    @*Css để ẩn điểm của top 3*@
    .result-info {
        display: none;
        position: absolute;
        background-color: white;
        padding: 10px;
        border: 1px solid black;
    }

    .result:hover .result-info {
        display: block;
    }

    .gold {
    background-color: #FFD700;
    }

    .silver {
        background-color: #C0C0C0;
    }

    .bronze {
        background-color: #CD7F32; /* brown color */
    }
</style>

<body>
    <div class="announcement">
        <h2>Kết quả công bố</h2>
        <p>Xin chúc mừng các thí sinh vượt qua cuộc thi!</p>
    </div>
    <div class="list-Result">
        <div class="result-board">
            @{
                var index = top3Results.Select((item, index) => index).ToList();
            }

            @if (top3Results.Count >= 2)
            {
                <div class="result">
                    <div class="result-content">
                        <h3>Top 2</h3>
                        <p>@layTen(top3Results[index[1]].PhieuDangKy.UserId)</p>
                    </div>

                    <div class="result-info">
                        <table>
                            <tr>
                                <th>Điểm</th>
                                <th>Phút</th>
                                <th>Giây</th>
                            </tr>
                            <tr>
                                <td>@Html.DisplayFor(modelItem => top3Results[index[1]].Diem)</td>
                                <td>@Html.DisplayFor(modelItem => top3Results[index[1]].Phut)</td>
                                <td>@Html.DisplayFor(modelItem => top3Results[index[1]].Giay)</td>
                            </tr>
                        </table>
                    </div>

                    <div class="resultTop">
                        <div class="result2">
                        </div>
                    </div>
                </div>
            }

            @if (top3Results.Count >= 1)
            {
                <div class="result">
                    <div class="result-content">
                        <h3>Top 1</h3>
                        <p>@layTen(top3Results[index[0]].PhieuDangKy.UserId)</p>
                    </div>

                    <div class="result-info">
                        <table>
                            <tr>
                                <th>Điểm</th>
                                <th>Phút</th>
                                <th>Giây</th>
                            </tr>
                            <tr>
                                <td>@Html.DisplayFor(modelItem => top3Results[index[0]].Diem)</td>
                                <td>@Html.DisplayFor(modelItem => top3Results[index[0]].Phut)</td>
                                <td>@Html.DisplayFor(modelItem => top3Results[index[0]].Giay)</td>
                            </tr>
                        </table>
                    </div>

                    <div class="resultTop">
                        <div class="result1">
                        </div>
                    </div>
                </div>
            }

            @if (top3Results.Count >= 3)
            {
                <div class="result">
                    <div class="result-content">
                        <h3>Top 3</h3>
                        <p>@layTen(top3Results[index[2]].PhieuDangKy.UserId)</p>
                    </div>

                    <div class="result-info">
                        <table>
                            <tr>
                                <th>Điểm</th>
                                <th>Phút</th>
                                <th>Giây</th>
                            </tr>
                            <tr>
                                <td>@Html.DisplayFor(modelItem => top3Results[index[2]].Diem)</td>
                                <td>@Html.DisplayFor(modelItem => top3Results[index[2]].Phut)</td>
                                <td>@Html.DisplayFor(modelItem => top3Results[index[2]].Giay)</td>
                            </tr>
                        </table>
                    </div>

                    <div class="resultTop">
                        <div class="result3">
                        </div>
                    </div>
                </div>
            }
        </div>

            <div class="list">
                @if (remainingResults.Any())
                {
                    <table>
                        <thead>
                            <tr>
                                <th>
                                    Top
                                </th>
                                <th>
                                    Mã
                                </th>
                                <th>
                                    Họ và tên
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Phut)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Giay)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Diem)
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in remainingResults)
                            {
                                //Tăng hạng
                                top++;
                                <tr class="result-row @(top == 1 ? "gold" : (top == 2 ? "silver" : (top == 3 ? "bronze" : "")))">
                                    <td>
                                        @top
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PhieuDangKyId)
                                    </td>
                                    <td>
                                        @layTen(item.PhieuDangKy.UserId)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Phut)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Giay)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Diem)
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
            </div>
    </div>
</body>





