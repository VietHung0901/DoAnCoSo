@model DoAnCoSo.Models.tbTruong


<style>
    h3 {
        font-size: 20px;
        margin-bottom: 10px;
    }

    h4 {
        font-size: 18px;
        margin-bottom: 10px;
    }

    hr {
        margin-top: 10px;
        margin-bottom: 10px;
        border: 0;
        border-top: 1px solid #ccc;
    }

    .row {
        margin-right: -15px;
        margin-left: -15px;
    }

    .col-sm-2,
    .col-sm-10 {
        padding-right: 15px;
        padding-left: 15px;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .btn-danger {
        color: #fff;
        background-color: #dc3545;
        border-color: #dc3545;
        border-radius: 4px;
        padding: 0.375rem 0.75rem;
        font-size: 1rem;
        line-height: 1.5;
        text-align: center;
        vertical-align: middle;
        cursor: pointer;
    }

        .btn-danger:hover {
            background-color: #b02a37;
            border-color: #b02a37;
        }
</style>
<h3>Bạn có muốn xóa thông tin trường này?</h3>
<div>
    <h4>Trường</h4>
    <hr>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TenTruong)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TenTruong)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LoaiTruong)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LoaiTruong.Id)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
</div>


@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
    <!-- Trong phần head của view hoặc layout -->
    <script>
        // Hàm hiển thị thông báo với thời gian tự đóng
        function showSuccessMessage() {
            Swal.fire({
                icon: 'success',
                title: '@TempData["SuccessMessage"]',
                showConfirmButton: false,
                timer: 1500,
                onClose: function () {
                    window.location.href = '@Url.Action("Index", "Truongs")';
                }
            });
        }

        // Hàm hiển thị thông báo lỗi với thời gian tự đóng
        function showErrorMessage() {
            Swal.fire({
                icon: 'error',
                title: '@TempData["ErrorMessage"]',
                showConfirmButton: false,
                timer: 1500
            });
        }

        // Gọi hàm hiển thị thông báo khi SuccessMessage hoặc ErrorMessage có giá trị
        @if (TempData["SuccessMessage"] != null)
        {
            <text>
                showSuccessMessage();
            </text>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <text>
                showErrorMessage();
            </text>
        }
    </script>


}