@model IEnumerable<DoAnCoSo.Models.tbTruong>

<h1>Danh sách các trường</h1>
<p>
    <a asp-action="Create">Thêm trường</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TenTruong)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LoaiTruong)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenTruong)
            </td>
            <td>

                @Html.DisplayFor(modelItem => item.LoaiTruong.TenLoaiTruong)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
